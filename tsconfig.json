      "module": "commonjs",
      "rootDir": "src/ts",
      "outDir": "src/js",
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}